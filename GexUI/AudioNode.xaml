<UserControl x:Class="GexUI.AudioNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GexUI"
             mc:Ignorable="d"
             Width="120" Height="160">
    <StackPanel Width="120" Height="160">
        <DockPanel Height="10">
            <Ellipse Height="10" Width="10" Fill="Yellow" />
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" Height="15" Background="DarkGray">
            <TextBlock Text="ANYAD" DockPanel.Dock="Left" Name="Title" FontSize="10"/>
            <Rectangle DockPanel.Dock="Right" Width="10" Height="10" Fill="Black" Name="DeleteButton"/>
            <Rectangle DockPanel.Dock="Right" Width="10" Height="10" Fill="Green" />
        </DockPanel>
        <StackPanel Name="Container" MinHeight="135" Background="DarkGray" />
        <DockPanel Height="10" DockPanel.Dock="Bottom">
            <Ellipse Height="10" Width="10" Fill="Yellow" />
        </DockPanel>
    </StackPanel>
</UserControl>
