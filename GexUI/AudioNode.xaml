<UserControl x:Class="GexUI.AudioNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GexUI"
             mc:Ignorable="d"
             Width="120" Height="150">
    <DockPanel Width="120" Height="150" Background="DarkGray">
        <WrapPanel DockPanel.Dock="Top" Height="15" HorizontalAlignment="Right" Background="Transparent">
            <TextBlock Text="ANYAD" Name="Title"/>
            <Separator Width="3"/>
            <Rectangle Width="10" Height="10" Name="StatusLight" Fill="LightGreen" />
            <Separator Width="3"/>
            <Rectangle Width="10" Height="10" Fill="Black" Name="DeleteButton"/>
            <Separator Width="3"/>
        </WrapPanel>
        <StackPanel Width="120" Name="Container" />
    </DockPanel>
</UserControl>
