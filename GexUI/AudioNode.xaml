<UserControl x:Class="GexUI.AudioNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GexUI"
             mc:Ignorable="d"
             Width="120" Height="150">
    <DockPanel Width="120" Height="150">
        <GroupBox MinHeight="150" Background="DarkGray" Name="Border" FontSize="14" Header="Dummy Text">
            <DockPanel>
                <WrapPanel DockPanel.Dock="Top" Height="10" HorizontalAlignment="Right">
                    <Rectangle Width="10" Height="10" Name="StatusLight" />
                    <Separator Width="3"/>
                    <Rectangle Width="10" Height="10" Fill="Black" Name="DeleteButton"/>
                </WrapPanel>
                <StackPanel DockPanel.Dock="Bottom" Width="120" Name="Container" />
            </DockPanel>
        </GroupBox>
    </DockPanel>
</UserControl>
