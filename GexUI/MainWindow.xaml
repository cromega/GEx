<Window x:Class="GexUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GexUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <DockPanel Name="MainContainer">
        <ListBox Name="NodeList" MinWidth="100" />
        <DockPanel Height="50" DockPanel.Dock="Bottom" Focusable="True">
            <Button Content="Beep!" Name="BeepButton"/>
        </DockPanel>
        <Canvas Name="PatchEditor" Background="LightGray" Focusable="True">
            <Canvas.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform />
                </TransformGroup>
            </Canvas.LayoutTransform>
        </Canvas>
    </DockPanel>
</Window>
